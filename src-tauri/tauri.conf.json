{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Whispo",
  "version": "0.1.7",
  "identifier": "app.whispo",
  "build": {
    "beforeDevCommand": "pnpm run dev:frontend",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "pnpm run build:frontend",
    "frontendDist": "../out/renderer"
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    },
    "macOS": {
      "entitlements": null,
      "exceptionDomain": "",
      "frameworks": [],
      "providerShortName": null,
      "signingIdentity": null
    }
  },
  "app": {
    "withGlobalTauri": true,
    "security": {
      "csp": null
    },
    "windows": [
      {
        "title": "Whispo",
        "label": "main",
        "width": 900,
        "height": 700,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "transparent": false,
        "visible": false
      },
      {
        "title": "Recording",
        "label": "panel",
        "width": 300,
        "height": 300,
        "resizable": false,
        "fullscreen": false,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": true,
        "visible": false,
        "skipTaskbar": true
      },
      {
        "title": "Status",
        "label": "statusbar",
        "width": 200,
        "height": 40,
        "resizable": false,
        "fullscreen": false,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": true,
        "visible": false,
        "skipTaskbar": true
      },
      {
        "title": "Setup",
        "label": "setup",
        "width": 600,
        "height": 500,
        "resizable": false,
        "fullscreen": false,
        "decorations": true,
        "transparent": false,
        "visible": false
      }
    ],
    "trayIcon": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true
    }
  },
  "plugins": {
    "shell": {
      "open": true
    },
    "fs": {
      "scope": ["$APPDATA/*", "$APPLOCALDATA/*", "$RESOURCE/*"]
    },
    "dialog": {
      "all": true
    },
    "clipboard-manager": {
      "all": true
    },
    "global-shortcut": {
      "all": true
    },
    "notification": {
      "all": true
    }
  }
}
